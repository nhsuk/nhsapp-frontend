{% extends "nhsuk/template.njk" %}

{% from 'breadcrumb/macro.njk' import breadcrumb %}
{% from 'back-link/macro.njk' import backLink %}
{% from "icon/macro.njk" import nhsappIcon %}

{% block pageTitle -%}
  {% if title %}{{ title }} - {% endif %}NHS App design system
{%- endblock %}

{% block head %}
  <link href="/assets/css/app.css" rel="stylesheet" />
  <script src="/assets/js/app.js" type="module"></script>

  <meta property="og:url" content="https://design-system.nhsapp.service.nhs.uk/"/>
  <meta property="og:site_name" content="nhs.uk"/>
  <meta property="og:title" content="NHS App design system"/>
  <meta property="og:description" content="Design and build accessible services for the NHS App. Use the NHS App design system to learn from the work and experiences of others."/>
  <meta property="og:type" content="website"/>
  <meta property="og:locale" content="en_GB"/>
  <meta property="og:image" content="https://design-system.nhsapp.service.nhs.uk/assets/images/open-graph.png"/>

  <script type="module" src="/nhsuk-frontend/dist/nhsuk/nhsuk-frontend.min.js"></script>
  <script type="module">
    import { initAll } from '/nhsuk-frontend/dist/nhsuk/nhsuk-frontend.min.js'
    initAll()
  </script>
{% endblock %}

{% block header %}
  {{ header({
    logo: {
      ariaLabel: "NHS"
      
    },
    service: {
      text: "App design system",
      href: "/"
    },
    navigation: {
      items: [
        {
          href: "/get-started/",
          text: "Get started"
        },
        {
          href: '/components/',
          text: 'Components'
        },
        {
          href: '/patterns/',
          text: 'Patterns'
        },
        {
          href: '/community/',
          text: 'Community'
        }
      ]
    }
  }) }}
{% endblock %}

{% block footer %}
  {{ footer({
    meta: {
      items: [
        {
          href: "/community/help-and-feedback/",
          text: "Help and feedback"
        },
        {
          href: "https://github.com/nhsuk/nhsapp-frontend",
          text: "Code on Github"
        }
      ]
    }
  }) }}
{% endblock %}