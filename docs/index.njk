{% extends "layouts/base.njk" %}

{% set title = "NHS App design resources" %}

{%- from 'hero/macro.njk' import hero -%}
{% from "nhsapp-card/macro.njk" import nhsappCardGroup %}
{% from "nhsapp-card/macro.njk" import nhsappCard %}

{% block header %}
  {{ super() }}

  {{ hero({
    "heading": "NHS App design resources",
    "text": "Design, build, and deliver accessible and consistent services for the NHS App"
  }) }}
{% endblock %}

{% block main %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">

      <h2 class="nhsuk-heading-s">Styles, components and patterns</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS design system',
            href: 'https://service-manual.nhs.uk/design-system'
          },
          {
            title: 'NHS App design components',
            href: './components/'
          }
        ]
      }) }}

      <h2 class="nhsuk-heading-s">Content design</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS content guide',
            href: 'https://service-manual.nhs.uk/content'
          }
        ]
      }) }}

      <h2 class="nhsuk-heading-s">Accessibility</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS accessibility guidance',
            href: 'https://service-manual.nhs.uk/accessibility'
          },
          {
            title: 'Accessibility checklist',
            href: 'https://nhsdigital.github.io/accessibility-checklist/checklist-full/'
          }
        ]
      }) }}

      <hr>

      <h2 class="nhsuk-heading-s">Get help</h2>
      <p>If you have a question, idea or suggestion, you can use the:</p>
      <ul>
        <li><a href="https://nhsdigitalcorporate.enterprise.slack.com/archives/C06GY1LRP19">#forum-app-design-system on NHS England Slack</a></li>
        <li><a href="https://nhs-service-manual.slack.com/archives/CDJ29AQCD">#general on NHS service manual Slack</a></li>
        <li><a href="https://github.com/nhsuk/nhsapp-frontend/issues/new/choose">NHS App Frontend GitHub issues</a></li>
      </ul>

    </div>
  </div>
{% endblock %}
