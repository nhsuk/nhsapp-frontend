{% extends "layouts/base.njk" %}

{% set title = "NHS App design resources" %}

{%- from 'hero/macro.njk' import hero -%}
{% from "nhsapp/components/card/macro.njk" import nhsappCardGroup %}
{% from "nhsapp/components/card/macro.njk" import nhsappCard %}

{% block header %}
  {{ super() }}

  {{ hero({
    "heading": "NHS App design resources",
    "text": "Design, build, and deliver accessible and consistent services for the NHS App",
    "classes": "app-hero"
  }) }}
{% endblock %}

{% block main %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">

      <h2 class="nhsuk-heading-l">Styles, components and patterns</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS design system',
            href: 'https://service-manual.nhs.uk/design-system'
          },
          {
            title: 'NHS App design components',
            href: './components/'
          }
        ]
      }) }}

      <h2 class="nhsuk-heading-l">Content design</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS content guide',
            href: 'https://service-manual.nhs.uk/content'
          }
        ]
      }) }}

      <h2 class="nhsuk-heading-l">Accessibility</h2>

      {{ nhsappCardGroup({
        stacked: true,
        cards: [
          {
            title: 'NHS accessibility guidance',
            href: 'https://service-manual.nhs.uk/accessibility'
          },
          {
            title: 'Accessibility checklist',
            href: 'https://nhsdigital.github.io/accessibility-checklist/checklist-full/'
          }
        ]
      }) }}

      <hr>

      <div class="nhsuk-u-reading-width">

        <h2 class="nhsuk-heading-l">Get help</h2>
        <p>The NHS App Design System Team provides support for users of the NHS App design resources. <a href="/help-and-feedback/">Contact us</a> to ask for help.

      </div>

    </div>
  </div>
{% endblock %}
