{% from "nhsuk/macros/attributes.njk" import nhsukAttributes %}

{%- if params.count -%}
<p {%- if params.id %} id="{{ params.id }}"{% endif %} class="nhsapp-badge {{ params.classes if params.classes }}" {{- nhsukAttributes(params.attributes) }}>
    <span class="nhsuk-u-visually-hidden">You have</span>
    {% if params.count > 9 %}
        9+
    {% else %}
        {{ params.count }}
    {% endif %}
    <span class="nhsuk-u-visually-hidden">{{ params.label }}</span>
</p>
{%- endif -%}